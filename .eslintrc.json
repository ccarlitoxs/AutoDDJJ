{
  "env": {
    "browser": true,
    "es2021": true,
    "node": true
  },
  "extends": ["eslint:recommended"],
  "parserOptions": {
    "ecmaVersion": 13,
    "sourceType": "module"
  },
  "rules": {
    "no-use-before-define": "off",
    "no-unused-vars": ["error", { "argsIgnorePattern": "next" }],
    // "camelcase": "warn",
    "prefer-const": "error",
    "no-const-assign": "error",
    "no-console": "warn",
    "no-alert": "error",
    "no-multi-spaces": "error",
    "eqeqeq": "error",
    "quotes": ["error", "single", { "allowTemplateLiterals": true }]
  }
}
